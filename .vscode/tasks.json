{
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
                    "\"C:/Program Files/Microsoft Visual Studio/2022/Community/Common7/Tools/VsDevCmd.bat\"",
                    "&&"
                ]
            },
            "env": {
                "__VSCMD_ARG_no_logo": "1"
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "C: MSVC cl.exe 建置使用中檔案",
            "command": "cl.exe",
            "args": [
                "/std:c17",
                "/Wall",
                "/Zi",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "偵錯工具產生的工作。"
        },
        {
            "type": "shell",
            "label": "C++: MSVC cl.exe 建置使用中檔案",
            "command": "cl.exe",
            "args": [
                "/std:c++20",
                "/Wall",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "偵錯工具產生的工作。"
        },
        {
            "type": "cppbuild",
            "label": "C: MSYS2 MinGW-w64 gcc.exe 建置使用中檔案",
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-std=c17",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "PATH": "C:\\msys64\\mingw64\\bin;${env:PATH}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "偵錯工具產生的工作。"
        },
        {
            "type": "cppbuild",
            "label": "C++: MSYS2 MinGW-w64 g++.exe 建置使用中檔案",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "PATH": "C:\\msys64\\mingw64\\bin;${env:PATH}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "偵錯工具產生的工作。"
        },
        {
            "type": "cppbuild",
            "label": "C: linux gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-std=c11",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C++: linux g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}